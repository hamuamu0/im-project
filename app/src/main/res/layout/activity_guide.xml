<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff">


    <androidx.viewpager.widget.ViewPager
        android:id="@+id/view_page"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <ImageView
        android:id="@+id/img_music"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentRight="true"
        android:layout_marginTop="30dp"
        android:layout_marginRight="50dp"
        android:background="@drawable/img_guide_music"/>

    <TextView
        android:id="@+id/txt_skip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginTop="35dp"
        android:text="跳过"
        android:layout_marginRight="15dp"
        android:textColor="#000000"
        android:textSize="15sp"/>


    <LinearLayout
        android:id="@+id/ll_index"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="50dp"
        android:gravity="center">

        <ImageView
            android:id="@+id/img_index1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/img_guide_point_p"/>

        <ImageView
            android:id="@+id/img_index2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/img_guide_point"
            android:layout_marginLeft="10dp"/>

        <ImageView
            android:id="@+id/img_index3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/img_guide_point"
            android:layout_marginLeft="10dp"/>



    </LinearLayout>

</RelativeLayout>